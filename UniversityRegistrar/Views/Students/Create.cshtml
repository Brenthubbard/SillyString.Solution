@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h4>Add a new task</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@class = "form-control", type="text", required="required"})
  @Html.LabelFor(model => model.GPA)
  @Html.TextBoxFor(model => model.GPA, new {@class = "form-control", type="text", required="number"})
  @Html.LabelFor(model => model.EnrollmentDate)
  @Html.TextBoxFor(model => model.EnrollmentDate, new {@class = "form-control", type="date", required="required"})

  @Html.Label("Select course")
  @Html.DropDownList("CourseId")

  <br>
  <input type="submit" value="Add new student" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all students", "Index")</p>